<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="@Url.Content("~/Layout/img/favicon2.ico")" type="image/x-icon">
    <link href="@Url.Content("~/Layout/css/common.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        document.getElementById("txtSearch").addEventListener("keydown", function (e) {
            if (!e) { var e = window.event; }
            e.preventDefault(); // sometimes useful
            // Enter is pressed
            if (e.keyCode == 13) { submitFunction(); }
        }, false);
    </script>
</head>
<body>
    <div id="wrapper">
        <div id="mini-menu">
            <div id="mini-items">
                    <div id="search" style="float:left;">
                        @using (Html.BeginForm("SearchProduct", "Search", FormMethod.Get))
                        {
                            @Html.TextBox("txtSearch", "", new { @placeholder = "Search Product" })
                        }
                    </div>
                <div class="fright">
                    @Html.Partial("_LogOnPartial")
                </div>
            </div>
        </div>
        <div id="top-menu">
            <div id="top-menu-items">
                <div id="top-logo" class="fleft">
                    <a href="/">
                        <img src="../../Layout/img/logo.png" /></a>
                </div>
                <div id="top-menu-list" class="fright">
                    <ul>
                        @Html.Action("MenuMenu", "Menu")
                    </ul>
                </div>
            </div>
        </div>
        <div class="clear">
        </div>
        <div id="main-content">
            @RenderBody()
        </div>
        <div class="clear">
        </div>
    </div>
    <div id="footer">
        <div>
            <span class="copyright">&copy; 2014 Trader Market | </span>
            <a href="https://plus.google.com/u/0/+DerrickAgius/posts"><img src="../../Layout/img/derricklogo.jpg" /></a>
            <span class="name">Derrick Agius</span>
        </div>
    </div>
</body>
</html>
